<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_layout_theme"
    android:minWidth="300dip"
    android:orientation="vertical" >
	<TextView
        android:id="@+id/dilog_subject_title"
        style="@style/style_title_center"
        android:layout_width="wrap_content"
        android:minWidth="300dip"
	    android:background="@drawable/frame_button_n"
        android:text="@string/tip_choose_subject_type"/>
    <ListView
        android:id="@+id/subject_list_view"
        style="@style/style_listview"
        android:background="#f6f6f6"
        android:dividerHeight="1dp"
        android:divider="@color/bg_dark_sub"
        android:layout_height="wrap_content"
        android:layout_width="300dip"
        android:gravity="center" >
    </ListView>
</LinearLayout>