<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_theme"
    android:minWidth="300dip"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dilog_title"
        style="@style/style_title_center"
        android:background="@drawable/frame_button_n"
        android:layout_width="fill_parent"/>
    
    <include 
        android:id="@+id/dilog_item_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/paper_layout_1"/>
    
	<include 
        android:id="@+id/dilog_item_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/paper_layout_2"/>
	
	<include 
        android:id="@+id/dilog_item_3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/paper_layout_1"/>
	
	<include 
        android:id="@+id/dilog_item_4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/paper_layout_2"/>

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	    android:orientation="horizontal">
		<Button
		    android:id="@+id/dilog_bt_left"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/ok" />

		<Button
		    android:id="@+id/dilog_bt_right"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="@string/cancel" />
	</LinearLayout>
</LinearLayout>