<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.questionnaire"
    android:versionCode="2"
    android:versionName="1.0.1" android:installLocation="auto">

    <uses-sdk android:minSdkVersion="10"
        android:targetSdkVersion="14"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:name=".QuestApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/style_activity">
        <activity
            android:name=".activity.ActivitySplash"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name" 
            android:theme="@style/style_activity_splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity 
            android:name=".activity.ActivityMain" 
            android:configChanges="touchscreen|keyboard|keyboardHidden|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        <!-- three main segments of the app -->
        <activity
            android:name=".activity.create.ActivityHome"
            android:configChanges="touchscreen|navigation|orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>
        <activity 
            android:name=".activity.create.ActivityCreate" 
            android:configChanges="touchscreen|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        <activity 
            android:name=".activity.create.ActivityCreatePaper" 
            android:configChanges="touchscreen|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        <activity 
            android:name=".activity.create.ActivityCreateAnserSubject" 
            android:configChanges="touchscreen|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        <activity 
            android:name=".activity.create.ActivityCreateSigleSubject" 
            android:configChanges="touchscreen|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        <activity 
            android:name=".activity.create.ActivityCreateMultipleSubject" 
            android:configChanges="touchscreen|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>

        <activity
            android:name=".activity.create.ActivityCreateDocument"
            android:configChanges="touchscreen|navigation|orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>
        
        
        <activity 
            android:name=".activity.done.ActivityDoing" 
            android:configChanges="touchscreen|keyboard|keyboardHidden|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        <activity 
            android:name=".activity.done.ActivityDoingPaper" 
            android:configChanges="touchscreen|keyboard|keyboardHidden|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        
        <activity 
            android:name=".activity.statistic.ActivityStatisticPaper" 
            android:configChanges="touchscreen|keyboard|keyboardHidden|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        
        <activity 
            android:name=".activity.statistic.ActivityStatisticQuestionDetail" 
            android:configChanges="touchscreen|keyboard|keyboardHidden|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
      
        <activity 
            android:name=".activity.statistic.ActivityStatisticList" 
            android:configChanges="touchscreen|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        
        <activity 
            android:name=".activity.more.ActivityAbout" 
            android:configChanges="touchscreen|keyboard|keyboardHidden|navigation|orientation" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        
        <activity 
            android:name=".activity.more.ActivityMore" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
      
        <activity 
            android:name=".activity.more.ActivityUpdate" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>
        
        <activity 
            android:name=".activity.more.ActivityIntr" 
            android:screenOrientation="portrait" 
            android:launchMode="singleTop"/>

        <activity
            android:name=".activity.media.ActivityVideoList"
            android:configChanges="touchscreen|navigation|orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <activity
            android:name=".activity.media.ActivityImageList"
            android:configChanges="touchscreen|navigation|orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>

        <activity
            android:name=".activity.media.ActivityAudioList"
            android:configChanges="touchscreen|navigation|orientation"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"/>
        <activity
            android:name=".activity.media.ActivityAudioRecord"
            android:configChanges="touchscreen|navigation|orientation"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.chart.PieChartActivity"
            android:configChanges="touchscreen|navigation|orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>